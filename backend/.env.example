# Configuration Base de données MySQL (XAMPP)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=its_maritime_stock
DB_USER=root
DB_PASSWORD=

# Configuration Serveur
PORT=5000
NODE_ENV=development

# JWT Configuration
# IMPORTANT: Générez un secret fort avec: openssl rand -base64 32
JWT_SECRET=CHANGEZ_CE_SECRET_GENERER_AVEC_OPENSSL
JWT_EXPIRES_IN=24h

# Configuration CORS
FRONTEND_URL=http://localhost:3000

# Configuration Email (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre_email@gmail.com
SMTP_PASS=votre_mot_de_passe_app

# Configuration de l'application
APP_NAME=ITS Maritime Stock
APP_URL=http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100